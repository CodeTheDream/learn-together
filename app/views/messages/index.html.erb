<div class="container">
  <%= link_to 'Home', root_path %>
</div>

<div class="container">
<div class="row">
<div class="col-7">
  <h3>Messages</h3>
  <div>
  <div>
    <% @messages.each do |message| %>
    <% if message.sender_id == current_user.id || message.recipient_id == current_user.id %>
    <% if message.sender_id == current_user.id %>
      <% recipient = User.find(message.recipient_id) %>
    <% else %>
      <% recipient = User.find(message.sender_id) %>
    <% end %>
    <table class="table tsize">
        <col width="20%">
        <col width="75%">
        <col width="5%">
        <tr>
          <td><%= recipient.first_name %> <%= recipient.last_name %></td>
          <td><%= message.contents.last %></td>
          <td><%= link_to '', message_contents_path(message), :class => "fas fa-pen-nib fa-xm" %></td>
          <td><%= link_to '', messages_path(message), method: :destroy, :class => "fas fa-trash-alt fa-xm" %></td>
        </tr>
    </table>
   <% end %>
  <% end %>
  </div>
 </div>
</div>
<div class="col-4">
  <h3>Matched People</h3>
  <div class="over">
      <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <div class="container">
          <div class="media">
            <% if user.picture != nil %>
              <%= img_tag user.picture %>
            <% else %>
              <img class="face mr-3 mt-3 rounded-circle" src="https://images.unsplash.com/photo-1508109742312-c7d531211d11?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="picture"> 
            <% end %>
            <div  class="media-body">
              <p>
                Name: <%= user.first_name %> <%= user.last_name %>
              </p>
              <p>
                Distance: <%= user.distance.round(2) %> mile
              </p>
              <p>
                <%= link_to "", messages_path(sender_id: current_user.id, recipient_id: user.id), method:'post', :class => "fas fa-paper-plane fa-xm" %>
                <%= link_to "", messages_path(sender_id: current_user.id, recipient_id: user.id), method:'post', :class => "fas fa-search fa-xm" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
     <% end %>
    </div>
 </div>
</div>
</div>