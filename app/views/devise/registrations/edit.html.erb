<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <br />
  <!--Personal Info from new user-->
  <div class="col-8">
  <div class="card text-white bg-info mb-3" style="max-width: 50rem;">
    <div class="card-header">User Information</div>
    <div class="card-body">  
      <h5 class="card-title">User</h5>
        <div class="field">
          <%= f.label :picture %>
          <%= f.file_field :picture %>
        </div>
        <div>
             <%= f.label :first_name %>
             <%= f.text_field :first_name, autofocus: true %>
        
             <%= f.label :last_name %>
             <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div>
             <%= f.label :gender %>
             <%= f.select :gender,[ 'Female', 'Male', 'Other', 'N/A' ], :prompt => 'Select One', autofocus: true %>
        </div>   
        <div>
             <%= f.label :age %>
             <%= f.select :age, options_for_select(18..100), :prompt => "age" ,autofocus: true %>
        </div>
        <div>
             <%= f.label :street_address %>
             <%= f.text_field :street_address, autofocus: true %>
        </div> 
        <div>
             <%= f.label :city %>
             <%= f.text_field :city, autofocus: true %>

             <%= f.label :state %>
             <%= f.text_field :state, autofocus: true %>
        </div>
        <div>
             <%= f.label :country %>
             <%= f.text_field :country, autofocus: true %>
        </div>   
        <div>
             <%= f.label :nationality %>
             <%= f.text_field :nationality, autofocus: true %>
        </div> 
        <!--## LANGUAGE USER INFORMATION ## -->
        <div>
          <!--Native Language information-->
          <%= f.label :native_language %>
          <%= f.select :nativelanguage_id, options_from_collection_for_select(Language.all, 'id', 'name', resource.nativelanguage_id), autofocus: true %>
          <%= f.select 'nativelevel', options_for_select([['Low', 1 ], ['Medium', 2], ['High', 3]], resource.nativelevel) %>
        </div>
        <div>
          <%= f.label :learn_language %>
          <%= f.select :learnlanguage_id,options_from_collection_for_select(Language.all, 'id', 'name',resource.learnlanguage_id), autofocus: true %>
          <%= f.select 'learninglevel', options_for_select([['Low', 1 ], ['Medium', 2], ['High', 3]], resource.learninglevel) %>
        </div> 
        <div>
          <%= f.label :language_you_speak %>
          <%= f.select :speaklanguage_id,options_from_collection_for_select(Language.all, 'id', 'name',resource.speaklanguage_id), autofocus: true %>
          <%= f.select 'speaklevel', options_for_select([['Low', 1 ], ['Medium', 2], ['High', 3]], resource.speaklevel) %>
        </div>        
        <br />        
        <div>        
        <div>
             <%= f.label :about_me %><br />
             <%= f.text_area :introduction, :cols => 80, :rows => 5, autofocus: true %>
        </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
